#include "./tsuruAnime.dnh"

task TBombBarrier(int objBoss_) {
    while (ObjEnemy_GetInfo(objBoss_, INFO_LIFE) > 0 && !Obj_IsDeleted(objBoss_)) {
        if (IsPlayerSpellActive()) {
            AnimeMonochrome();
            ObjEnemy_SetDamageRate(objBoss_, 0, 0);
            while (IsPlayerSpellActive()) yield;
            wait(15);
            AnimeMonochrome();
            ObjEnemy_SetDamageRate(objBoss_, 100, 100);
        }
        yield;
    }
}